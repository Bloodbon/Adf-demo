{
	"name": "BookingdataTrasformation",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "CosmosDbNoSql",
						"type": "DatasetReference"
					},
					"name": "bookingdata",
					"description": "ImportBookingDataFromCosmos"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "CosmosDbNoSql",
						"type": "DatasetReference"
					},
					"name": "synapseFactWrIte",
					"description": "ExportdatatoBookingFactdataSynapse",
					"rejectedDataLinkedService": {
						"referenceName": "AzureDataLakeStorage1",
						"type": "LinkedServiceReference"
					}
				}
			],
			"transformations": [
				{
					"name": "BadRecords",
					"description": "ConditionallyDistributingDataInCheck_out_date"
				},
				{
					"name": "DerivedColumn"
				},
				{
					"name": "lookupSynapse",
					"description": "lookup on \"DeriverColumn\"  from \"synapseforColumns\""
				},
				{
					"name": "alterRowforUpdate",
					"description": "inserting,updating,deleting,upserting data\nfrom lookupforsynapse@booking_id"
				},
				{
					"name": "Finalcolumn"
				}
			],
			"scriptLines": [
				"source(output(",
				"          check_out_date as date,",
				"          customer_id as short,",
				"          timestamp as timestamp,",
				"          owner_id as string,",
				"          check_in_date as date,",
				"          property_id as string,",
				"          amount as double,",
				"          booking_id as string,",
				"          currency as string,",
				"          property_location as (city as string, country as string),",
				"          booking_date as timestamp",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     enableChangeFeed: true,",
				"     changeFeedStartFromTheBeginning: false,",
				"     format: 'document') ~> bookingdata",
				"bookingdata split(check_out_date<check_in_date,",
				"     disjoint: false) ~> BadRecords@(BadRecords, AcceptedRecords)",
				"BadRecords@AcceptedRecords derive(stay_duration = (toTimestamp(check_out_date)-toTimestamp(check_in_date))/86400000,",
				"          booking_year = year(booking_date),",
				"          booking_month = month(booking_date),",
				"          fulladress = concat(property_location.city,property_location.country),",
				"          city = property_location.city,",
				"          country = property_location.country,",
				"          booking_id = booking_id,",
				"          check_out_date = check_out_date,",
				"          customer_id = customer_id,",
				"          timestamp = timestamp,",
				"          owner_id = owner_id,",
				"          check_in_date = check_in_date,",
				"          property_id = property_id,",
				"          amount = amount,",
				"          currency = currency) ~> DerivedColumn",
				"DerivedColumn lookup(DerivedColumn@booking_id == lookupForSynapse@booking_id,",
				"     multiple: false,",
				"     pickup: 'first',",
				"     desc(lookupForSynapse@timestamp, true),",
				"     broadcast: 'auto')~> lookupSynapse",
				"lookupSynapse alterRow(insertIf(isNull(lookupForSynapse@booking_id)),",
				"     updateIf(not(isNull(lookupForSynapse@booking_id)))) ~> alterRowforUpdate",
				"alterRowforUpdate select(mapColumn(",
				"          check_out_date,",
				"          customer_id,",
				"          timestamp,",
				"          owner_id,",
				"          check_in_date,",
				"          property_id,",
				"          amount,",
				"          booking_id,",
				"          currency,",
				"          property_location,",
				"          booking_date,",
				"          stay_duration,",
				"          booking_year,",
				"          booking_month,",
				"          fulladress,",
				"          city,",
				"          country,",
				"          booking_id = lookupForSynapse@booking_id,",
				"          property_id = lookupForSynapse@property_id,",
				"          customer_id = lookupForSynapse@customer_id,",
				"          owner_id = lookupForSynapse@owner_id,",
				"          check_in_date = lookupForSynapse@check_in_date,",
				"          check_out_date = lookupForSynapse@check_out_date,",
				"          booking_date = lookupForSynapse@booking_date,",
				"          amount = lookupForSynapse@amount,",
				"          currency = lookupForSynapse@currency,",
				"          city = lookupForSynapse@city,",
				"          country = lookupForSynapse@country,",
				"          full_address,",
				"          stay_duration = lookupForSynapse@stay_duration,",
				"          booking_year = lookupForSynapse@booking_year,",
				"          booking_month = lookupForSynapse@booking_month,",
				"          timestamp = lookupForSynapse@timestamp",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> Finalcolumn",
				"Finalcolumn sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     deletable:false,",
				"     insertable:true,",
				"     updateable:true,",
				"     upsertable:false,",
				"     format: 'document',",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> synapseFactWrIte"
			]
		}
	}
}